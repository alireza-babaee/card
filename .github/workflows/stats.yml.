name: جمع‌آوری آمار ریپازیتوری

on:
  schedule:
    - cron: '0 0 * * *'      # هر روز ساعت ۰۰:۰۰ UTC (یعنی حدود ۳:۳۰ صبح ایران)
  workflow_dispatch:        # می‌تونی دستی هم ران کنی

jobs:
  gather-stats:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: جمع‌آوری آمار بازدید و کلون
        uses: jgehrcke/github-repo-stats@v1.2.0
        with:
          token: ${{ secrets.GH_TOKEN }}
          repositories: 'alireza-babaee/card'   # ← اینجا عوض کن!
          # مثال: mojtaba-mansouri/my-intro-card

      - name: کامیت و آپدیت آمار
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add .
          git commit -m "به‌روزرسانی آمار بازدید و کلون $(date +%Y-%m-%d)" || echo "هیچ تغییری نبود"
          git push
